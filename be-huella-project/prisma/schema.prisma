generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String  @id @default(uuid())
  username   String
  email      String
  password   String
  phone      String
  profilePic String?
  location   String
  pets       Pets[]
  alerts     Boolean
  admin      Boolean

  @@map("users")
}

model Pets {
  id          String   @id @default(uuid())
  name        String?
  type        String
  race        String?
  weight      Int?
  age         Int?
  photo       String
  when        DateTime
  gender      String
  necklace    Boolean
  lostOrFound String
  location    String
  User        Users    @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())

  @@map("pets")
}
